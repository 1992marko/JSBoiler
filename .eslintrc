{
  // I want to use babel-eslint for parsing!
  "parser": "babel-eslint",
  "env": {
    "jquery":true,
    "es6": true,
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true
  },
  // To give you an idea how to override rule options:
  "rules": {
    "semi": [2, "always"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "no-dupe-keys": 2 // disallow duplicate keys when creating object literals
  },
  "ecmaFeatures": {
    "modules": true,
    "jsx": true
  }
}